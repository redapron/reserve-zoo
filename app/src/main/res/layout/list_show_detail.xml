<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/listShowDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="17/01/2017"/>
        <TextView
            android:id="@+id/listShowTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15:30 - 16:00"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="ห้อง : "/>
            
            <TextView
                android:id="@+id/listShowRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0802"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="เรื่องการประชุม : "/>

            <TextView
                android:id="@+id/listShowNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="การเรียน Mobile"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="ชื่อผู้ใช้ห้องประชุม : "/>

            <TextView
                android:id="@+id/listShowForName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="วราภา"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="เบอร์ผู้ใช้ : "/>

            <TextView
                android:id="@+id/listShowForPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="------"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="ชื่อผู้จอง : "/>

            <TextView
                android:id="@+id/listShowUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="------"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="เบอร์ผู้จอง : "/>

            <TextView
                android:id="@+id/listShowUserPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="------"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>